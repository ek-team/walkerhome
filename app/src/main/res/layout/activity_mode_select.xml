<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@mipmap/ic_bg">
    <LinearLayout
        android:id="@+id/ll_user_mode"
        android:layout_width="340dp"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:background="@mipmap/icon_mode_select_bg"
        android:gravity="center">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@mipmap/icon_user_mode"
            android:layout_marginTop="30dp"/>
        <TextView
            android:text="用户模式"
            android:layout_marginTop="100dp"
            style="@style/select_mode_text" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_fast_mode"
        android:layout_width="340dp"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:layout_marginStart="160dp"
        android:background="@mipmap/icon_mode_select_bg"
        android:gravity="center">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@mipmap/icon_fast_mode"
            android:layout_marginTop="30dp"/>
        <TextView
            android:text="快速模式"
            android:layout_marginTop="100dp"
            style="@style/select_mode_text" />
    </LinearLayout>
</LinearLayout>