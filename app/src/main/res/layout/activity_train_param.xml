<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_bg"
    xmlns:tools="http://schemas.android.com/tools">
    <include
        android:id="@+id/home_left"
        layout="@layout/home_layout_left_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />
    <RelativeLayout
        android:id="@+id/layout_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_connect_bg">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingTop="22dp"
            android:paddingRight="30dp"
            android:paddingBottom="22dp">

            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/player_view"
                android:layout_width="640dp"
                android:layout_height="500dp"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/player_view"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingLeft="15dp"
                    android:paddingTop="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="15dp"
                    android:src="@drawable/ic_round_close" />


                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_logoshape" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="end"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/btn_go_evaluate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_orange_bg"
                        android:paddingLeft="20dp"
                        android:paddingTop="2dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="2dp"
                        android:text="去评估"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_88"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:textSize="20sp"
                    android:text="训练频次：（次/每天）"/>
                <RelativeLayout
                    android:id="@+id/layout_times_of_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/btn_frame_orange_bg">

                    <TextView
                        android:id="@+id/tv_times_of_day"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="0"
                        android:textColor="@color/black_88"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="19dp"
                        android:src="@drawable/ic_down_black"
                        android:visibility="invisible"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_88"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:textSize="20sp"
                    android:text="训练时间：（分钟）"/>

                <RelativeLayout
                    android:id="@+id/layout_tread_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/btn_frame_orange_bg">

                    <TextView
                        android:id="@+id/tv_tread_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="0"
                        android:textColor="@color/black_88"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="19dp"
                        android:src="@drawable/ic_down_black"
                        android:visibility="invisible"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_88"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:textSize="20sp"
                    android:text="训练步数：（步）"/>
                <RelativeLayout
                    android:id="@+id/layout_count_of_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/btn_frame_orange_bg">

                    <TextView
                        android:id="@+id/tv_count_of_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="0"
                        android:textColor="@color/black_88"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="19dp"
                        android:src="@drawable/ic_down_black"
                        android:visibility="gone"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_88"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:textSize="20sp"
                    android:text="目标负重：（公斤）"/>

                <RelativeLayout
                    android:id="@+id/layout_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/btn_frame_orange_bg">

                    <TextView
                        android:id="@+id/tv_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="30"
                        android:textColor="@color/black_88"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="19dp"
                        android:src="@drawable/ic_down_black"
                        android:visibility="invisible"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_88"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:textSize="20sp"
                    android:text="背景音乐："/>

                <RelativeLayout
                    android:id="@+id/layout_music"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/btn_frame_orange_bg">

                    <TextView
                        android:id="@+id/tv_music"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        tools:text="卡农"
                        android:textColor="@color/black_88"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="19dp"
                        android:src="@drawable/ic_down_black" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="音量："
                        android:textColor="@color/black_88"
                        android:textSize="18sp" />

                    <SeekBar
                        android:id="@+id/seekbar_volume"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:max="100"
                        android:maxHeight="3dp"
                        android:minHeight="3dp"
                        android:progressDrawable="@drawable/seekbar_shape_orange" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_previous"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_gray_bg_border"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dp"
                        android:paddingTop="2dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="2dp"
                        android:text="@string/previous"
                        android:textColor="@color/black_88"
                        android:textSize="20sp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tv_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/btn_orange_bg"
                        android:paddingLeft="40dp"
                        android:paddingTop="2dp"
                        android:paddingRight="40dp"
                        android:paddingBottom="2dp"
                        android:text="@string/start"
                        android:textColor="@color/white"
                        android:textSize="24sp" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/layout_main"
        android:layout_marginStart="955dp"
        android:layout_marginBottom="-15dp"
        android:gravity="center"
        android:text="定个目标"
        android:textColor="@color/white_88"
        android:textSize="20sp" />
</RelativeLayout>