<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:stateListAnimator="@animator/selector_animators_102">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/ic_bg">
        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/user_edit_item_margin_top"
            android:text="@string/s_Age"
            android:textSize="@dimen/user_edit_item_text_size"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="@+id/textView26"
            app:layout_constraintTop_toBottomOf="@+id/textView26" />

        <RadioGroup
            android:id="@+id/txtSex"
            android:layout_width="340dp"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/textView22"
            app:layout_constraintLeft_toLeftOf="@+id/cmbAge"
            app:layout_constraintTop_toTopOf="@+id/textView22">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/s_Man"
                android:textColor="@color/white"
                android:paddingStart="24dp"
                android:button="@drawable/checkbox_selector"
                android:textSize="@dimen/user_edit_item_text_size" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/s_Womnan"
                android:textColor="@color/white"
                android:paddingStart="24dp"
                android:button="@drawable/checkbox_selector"
                android:textSize="@dimen/user_edit_item_text_size" />
        </RadioGroup>
        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/user_edit_item_margin_top"
            android:text="@string/s_weight"
            android:textSize="@dimen/user_edit_item_text_size"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="@+id/textView21"
            app:layout_constraintTop_toBottomOf="@+id/textView21" />
        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/user_edit_item_margin_top"
            android:text="@string/s_BedNo"
            android:textSize="@dimen/user_edit_item_text_size"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="@+id/textView23"
            app:layout_constraintTop_toBottomOf="@+id/textView23" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="676dp"
            android:text="@string/s_CaseHistoryNO"
            android:textSize="@dimen/user_edit_item_text_size"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/textView26"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView26" />

        <EditText
            android:id="@+id/txtUserName"
            android:layout_width="340dp"
            android:layout_height="56dp"
            android:layout_marginStart="100dp"
            android:background="@drawable/style_txt_user"
            android:ems="10"
            android:hint="@string/hint_edit_name"
            android:paddingTop="@dimen/user_edit_text_hint_padding"
            android:maxLength="16"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white_60"
            android:textSize="@dimen/user_edit_item_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/textView26"
            app:layout_constraintLeft_toRightOf="@+id/textView26"
            app:layout_constraintTop_toTopOf="@+id/textView26" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/user_edit_item_margin_top"
            android:text="@string/s_UserDate"
            android:textSize="@dimen/user_edit_item_text_size"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="@+id/textView21"
            app:layout_constraintTop_toBottomOf="@+id/textView28" />

        <EditText
            android:id="@+id/txtDiag"
            android:layout_width="400dp"
            android:layout_height="162dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/style_txt_user"
            android:ems="10"
            android:inputType="textMultiLine"
            android:maxLength="256"
            android:textColor="@color/color_userMange_BtnLevel"
            android:textSize="@dimen/user_edit_item_text_size"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="@+id/textView19"
            app:layout_constraintTop_toBottomOf="@+id/txtPhone" />

        <EditText
            android:id="@+id/txtPhone"
            android:layout_width="340dp"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/style_txt_user"
            android:ems="10"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/user_edit_text_hint_padding"
            android:hint="@string/hint_edit_phone"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="@color/white"
            android:textColorHint="@color/white_60"
            android:textSize="@dimen/user_edit_item_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/textView27"
            app:layout_constraintLeft_toLeftOf="@+id/txtSex"
            app:layout_constraintTop_toTopOf="@+id/textView27" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/s_Phone"
            android:textSize="@dimen/user_edit_item_text_size"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="@+id/textView22"
            app:layout_constraintTop_toBottomOf="@+id/textView22" />

        <EditText
            android:id="@+id/tv_doctor"
            android:layout_width="340dp"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/style_txt_user"
            android:ems="10"
            android:paddingTop="@dimen/user_edit_text_hint_padding"
            android:hint="@string/hint_edit_bed_number"
            android:maxLength="5"
            android:textColor="@color/white"
            android:textColorHint="@color/white_60"
            android:textSize="@dimen/user_edit_item_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/textView24"
            app:layout_constraintLeft_toLeftOf="@+id/txtUserDate"
            app:layout_constraintTop_toTopOf="@+id/textView24" />
        <EditText
            android:id="@+id/tv_weight"
            android:layout_width="120dp"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/style_txt_user"
            android:ems="10"
            android:paddingTop="@dimen/user_edit_text_hint_padding"
            android:hint="@string/hint_edit_weight"
            android:maxLength="5"
            android:inputType="number"
            android:textColor="@color/white"
            android:textColorHint="@color/white_60"
            android:textSize="@dimen/user_edit_item_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/textView28"
            app:layout_constraintLeft_toLeftOf="@+id/txtUserDate"
            app:layout_constraintTop_toTopOf="@+id/textView28" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kg"
            android:textSize="@dimen/user_edit_item_text_size"
            android:layout_marginEnd="10dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/textView28"
            app:layout_constraintRight_toRightOf="@+id/tv_weight"
            app:layout_constraintTop_toTopOf="@+id/textView28"/>
        <Spinner
            android:id="@+id/cmbAge"
            android:layout_width="340dp"
            android:layout_height="56dp"
            android:layout_marginStart="100dp"
            android:background="@drawable/style_txt_user"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/textView20"
            app:layout_constraintLeft_toRightOf="@+id/textView20"
            app:layout_constraintTop_toTopOf="@+id/textView20" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginTop="@dimen/user_edit_item_margin_top"
            android:text="@string/s_Sex"
            android:textSize="@dimen/user_edit_item_text_size"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="@+id/textView20"
            app:layout_constraintTop_toBottomOf="@+id/textView20" />

        <EditText
            android:id="@+id/txtCaseHistoryNO"
            android:layout_width="340dp"
            android:layout_height="56dp"
            android:layout_marginStart="872dp"
            android:background="@drawable/style_txt_user"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:paddingTop="@dimen/user_edit_text_hint_padding"
            android:ems="10"
            android:hint="@string/hint_edit_case_number"
            android:maxLength="25"
            android:textColor="@color/white"
            android:textColorHint="@color/white_60"
            android:textSize="@dimen/user_edit_item_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/textView21"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView21" />

        <TextView
            android:id="@+id/txtUserDate"
            android:layout_width="340dp"
            android:layout_height="56dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/style_txt_user"
            android:paddingTop="@dimen/user_edit_text_hint_padding"
            android:hint="@string/hint_edit_be_hospitalized_date"
            android:textColor="@color/white"
            android:textColorHint="@color/white_60"
            android:textSize="@dimen/user_edit_item_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/textView23"
            app:layout_constraintLeft_toLeftOf="@+id/txtCaseHistoryNO"
            app:layout_constraintTop_toTopOf="@+id/textView23" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="85dp"
            android:layout_height="91dp"
            android:layout_marginTop="94dp"
            android:text="@string/s_Diag"
            android:textSize="@dimen/user_edit_item_text_size"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="@+id/textView27"
            app:layout_constraintTop_toBottomOf="@+id/textView27" />

        <TextView
            android:id="@+id/start_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/char_must"
            android:textColor="@color/color_userMange_Star"
            android:textSize="@dimen/user_edit_item_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/textView26"
            app:layout_constraintRight_toLeftOf="@+id/textView26"
            app:layout_constraintTop_toTopOf="@+id/textView26" />

        <TextView
            android:id="@+id/start_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/char_must"
            android:textColor="@color/color_userMange_Star"
            android:textSize="@dimen/user_edit_item_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/textView21"
            app:layout_constraintRight_toLeftOf="@+id/textView21"
            app:layout_constraintTop_toTopOf="@+id/textView21" />
        <TextView
            android:id="@+id/start_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/char_must"
            android:textColor="@color/color_userMange_Star"
            android:textSize="@dimen/user_edit_item_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/textView28"
            app:layout_constraintRight_toLeftOf="@+id/textView28"
            app:layout_constraintTop_toTopOf="@+id/textView28" />
        <TextView
            android:id="@+id/start_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/char_must"
            android:textColor="@color/color_userMange_Star"
            android:textSize="@dimen/user_edit_item_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/textView23"
            app:layout_constraintRight_toLeftOf="@+id/textView23"
            app:layout_constraintTop_toTopOf="@+id/textView23" />
        <TextView
            android:id="@+id/start_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/char_must"
            android:textColor="@color/color_userMange_Star"
            android:textSize="@dimen/user_edit_item_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/textView20"
            app:layout_constraintRight_toLeftOf="@+id/textView20"
            app:layout_constraintTop_toTopOf="@+id/textView20" />

        <TextView
            android:id="@+id/start_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/char_must"
            android:textColor="@color/color_userMange_Star"
            android:textSize="@dimen/user_edit_item_text_size"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/textView23"
            app:layout_constraintRight_toLeftOf="@+id/textView23"
            app:layout_constraintTop_toTopOf="@+id/textView23" />

        <TextView
            android:id="@+id/start_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/char_must"
            android:textColor="@color/color_userMange_Star"
            android:textSize="@dimen/user_edit_item_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/textView22"
            app:layout_constraintRight_toLeftOf="@+id/textView22"
            app:layout_constraintTop_toTopOf="@+id/textView22" />

        <TextView
            android:id="@+id/start_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/char_must"
            android:textColor="@color/color_userMange_Star"
            android:textSize="@dimen/user_edit_item_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/textView29"
            app:layout_constraintRight_toLeftOf="@+id/textView29"
            app:layout_constraintTop_toTopOf="@+id/textView29" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="100dp"
            android:text="@string/s_UserName"
            android:textSize="@dimen/user_edit_item_text_size"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/sp_select_diagnostic_result"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:entries="@array/diagnostic_result_list"
            android:gravity="center"
            android:spinnerMode="dropdown"
            android:theme="@style/Spinner"
            android:background="@drawable/style_txt_user"
            app:layout_constraintBottom_toBottomOf="@+id/textView29"
            app:layout_constraintLeft_toLeftOf="@+id/txtPhone" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:text="@string/s_must_star"
            android:textColor="@color/color_userMange_Star"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView24"
            app:layout_constraintLeft_toLeftOf="@+id/textView24"
            app:layout_constraintTop_toTopOf="@+id/textView24" />

        <Button
            android:id="@+id/btnUserEditReturn"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="300dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/style_btn_common"
            android:text="@string/btn_return"
            android:textAlignment="center"
            android:textColor="@color/whitesmoke"
            android:textSize="32sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDiag" />

        <Button
            android:id="@+id/btnUserEditSave"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_marginStart="160dp"
            android:background="@drawable/style_btn_common"
            android:text="@string/confirm"
            android:textAlignment="center"
            android:textColor="@color/whitesmoke"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnUserEditReturn"
            app:layout_constraintLeft_toRightOf="@+id/btnUserEditReturn"
            app:layout_constraintTop_toTopOf="@+id/btnUserEditReturn" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="0dp"
        android:alpha="1"
        android:background="@drawable/shape_radius_title"
        android:gravity="center"
        android:text="@string/title_activity_admin2"
        android:textColor="@color/white"
        android:textSize="35sp" />
</androidx.cardview.widget.CardView>