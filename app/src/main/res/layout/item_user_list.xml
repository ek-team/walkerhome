<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="212dp"
    android:layout_marginEnd="10dp"
    android:stateListAnimator="@animator/selector_animators_102"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="432dp"
        android:layout_height="212dp"
        android:background="@mipmap/icon_card">

        <FrameLayout
            android:id="@+id/fl_name"
            android:layout_width="180dp"
            android:layout_height="80dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="25dp"
                android:maxLength="8"
                android:singleLine="true"
                tools:text="name"
                android:textAlignment="center"
                android:textColor="@color/whitesmoke"
                android:textSize="30sp" />

        </FrameLayout>


        <TextView
            android:id="@+id/tv_id_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="病历号"
            android:textColor="@color/whitesmoke"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@+id/fl_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/fl_name" />

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLength="10"
            android:textColor="@color/whitesmoke"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_id_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_id_title"
            tools:text="id" />


        <ImageView
            android:id="@+id/photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:background="@drawable/ic_male"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fl_name" />


        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="4"
            android:textColor="@color/white_88"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_id_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/photo"
            tools:text="性别：sex" />


        <TextView
            android:id="@+id/tv_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            tools:text="年龄：23"
            android:textColor="@color/white_88"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_sex"
            app:layout_constraintRight_toRightOf="@+id/tv_sex"
            app:layout_constraintTop_toBottomOf="@+id/tv_sex" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            tools:text="入院时间：2017-02-07"
            android:textColor="@color/white_88"
            android:textSize="22sp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/tv_sex"
            app:layout_constraintRight_toRightOf="@+id/tv_sex"
            app:layout_constraintTop_toBottomOf="@+id/tv_age" />

        <ImageView
            android:id="@+id/img_select"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/icon_select"
            android:visibility="gone"
            app:layout_constraintHorizontal_bias="0.892"
            app:layout_constraintLeft_toLeftOf="@+id/tv_sex"
            app:layout_constraintRight_toRightOf="@+id/tv_sex"
            app:layout_constraintTop_toBottomOf="@+id/tv_age" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

