<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dip"
        android:src="@drawable/ic_power"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/img_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dip"
        android:layout_toStartOf="@id/iv_power"
        android:src="@mipmap/icon_battery_full"/>

    <TextView
        android:id="@+id/tv_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dip"
        android:layout_toStartOf="@id/iv_power"
        android:background="@drawable/ic_battery"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:text="30%"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="35dip"
        android:layout_toStartOf="@id/img_battery"
        android:padding="10dp"
        android:src="@drawable/ic_notification" />

    <ImageView
        android:id="@+id/iv_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_toStartOf="@id/img_battery"
        android:src="@drawable/round_red_point"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="25dip"
        android:layout_toStartOf="@id/iv_notification"
        android:padding="10dp"
        android:src="@drawable/ic_voice" />

    <LinearLayout
        android:id="@+id/layout_bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="40dip"
        android:layout_toStartOf="@id/iv_voice"
        android:background="@drawable/round_white_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="12dip"
            android:src="@drawable/round_red_point" />

        <ImageView
            android:id="@+id/iv_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:src="@drawable/ic_bluetooth" />
        <TextView
            android:id="@+id/tv_ble_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:layout_marginEnd="4dp"
            android:text="100"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="32dp"
        android:layout_toStartOf="@id/layout_bluetooth"
        android:background="@drawable/ic_header_bg">

        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/ic_male"
            android:layout_centerInParent="true"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="19dp"
        android:layout_toStartOf="@id/layout_header"
        android:textColor="@color/white"
        android:textSize="24sp" />
</RelativeLayout>