<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="88dp"
            android:src="@drawable/ic_logo" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dip"
            android:layout_marginTop="70dip"
            android:padding="10dp"
            android:src="@drawable/ic_back_white" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/ic_title_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/register_long"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_step_1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/round_orange_bar"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="用户名/密码设置"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <View
            android:layout_width="124dp"
            android:layout_height="1dp"
            android:layout_marginStart="18dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_step_2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="18dp"
            android:background="@drawable/round_empty_bg"
            android:gravity="center"
            android:padding="7dp"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="个人信息"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <View
            android:layout_width="180dp"
            android:layout_height="1dp"
            android:layout_marginStart="18dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_step_3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="18dp"
            android:background="@drawable/round_empty_bg"
            android:gravity="center"
            android:padding="7dp"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="医生绑定"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_step_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        tools:visibility="gone">

        <LinearLayout
            android:id="@+id/layout_sub_step_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_account"
                android:layout_width="480dp"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="27dp"
                android:hint="请输入用户名（选填）"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/white_88"
                android:textColorHint="@color/white_88"
                android:textSize="20sp" />

            <View
                android:layout_width="480dp"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorPrimary" />

            <RelativeLayout
                android:layout_width="480dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:drawableLeft="@drawable/ic_password"
                    android:drawablePadding="27dp"
                    android:hint="请输入密码（选填）"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColor="@color/white_88"
                    android:textColorHint="@color/white_88"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/iv_pwd_see"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_pwd_unable" />
            </RelativeLayout>

            <View
                android:layout_width="480dp"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#E6EAEE" />

            <RelativeLayout
                android:layout_width="480dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <EditText
                    android:id="@+id/et_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:drawableLeft="@drawable/ic_password"
                    android:drawablePadding="27dp"
                    android:hint="@string/hint_confirm_password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColor="@color/white_88"
                    android:textColorHint="@color/white_88"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/iv_confirm_pwd_see"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_pwd_unable" />
            </RelativeLayout>

            <View
                android:layout_width="480dp"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#E6EAEE" />
            <CheckBox
                android:id="@+id/cb_password_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                style="@style/MyCheckBox"
                android:textSize="16sp"
                android:paddingStart="10dp"
                android:layout_margin="10dp"
                android:text="密码管理"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/tv_step_1_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_orange_bg"
                    android:paddingLeft="50dp"
                    android:paddingTop="2dp"
                    android:paddingRight="50dp"
                    android:paddingBottom="2dp"
                    android:text="@string/confirm_short"
                    android:textColor="@color/white"
                    android:textSize="24sp" />
                <TextView
                    android:id="@+id/tv_step_skip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_orange_bg"
                    android:paddingLeft="50dp"
                    android:paddingTop="2dp"
                    android:paddingRight="50dp"
                    android:paddingBottom="2dp"
                    android:layout_marginStart="50dp"
                    android:text="@string/confirm_skip"
                    android:textColor="@color/white"
                    android:textSize="24sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="62dp"
            android:layout_toRightOf="@id/layout_sub_step_1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录名为1-25字符"
                android:textColor="#E0FAAD14"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:text="用于登录和找回密码；2～25个字符，支持中文，以文字，字母或者数字开头，只能含有: 数字 字母 下划线 . - @"
                android:textColor="@color/white_88"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:text="4-20个字符，密码不能和会员名相同"
                android:textColor="@color/white_88"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_step_2"
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="300dip"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:hint="@string/hint_full_name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/white_88"
                    android:textColorHint="@color/white_88"
                    android:textSize="20sp" />

                <View
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="#E6EAEE" />

                <EditText
                    android:id="@+id/et_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:background="@color/transparent"
                    android:hint="@string/hint_age"
                    android:inputType="numberSigned"
                    android:maxLines="1"
                    android:textColor="@color/white_88"
                    android:textColorHint="@color/white_88"
                    android:textSize="20sp" />
                <View
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="#E6EAEE" />
                <EditText
                    android:id="@+id/et_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:background="@color/transparent"
                    android:hint="@string/hint_weight"
                    android:inputType="numberSigned"
                    android:maxLines="1"
                    android:textColor="@color/white_88"
                    android:textColorHint="@color/white_88"
                    android:textSize="20sp" />

                <View
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="#E6EAEE" />
            </LinearLayout>

            <View
                android:layout_width="100dp"
                android:layout_height="0dp" />

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性        别："
                        android:textColor="@color/white_88"
                        android:textSize="24sp" />

                    <RadioGroup
                        android:id="@+id/rg_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="34dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/checkbox_selector"
                            android:checked="true"
                            android:gravity="center_vertical"
                            android:paddingStart="24dp"
                            android:text="男"
                            android:textColor="@color/white_85"
                            android:textSize="24sp" />

                        <RadioButton
                            android:id="@+id/rb_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="80dp"
                            android:button="@drawable/checkbox_selector"
                            android:gravity="center_vertical"
                            android:paddingStart="24dp"
                            android:text="女"
                            android:textColor="@color/white_85"
                            android:textSize="24sp" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个人所在地："
                        android:textColor="@color/white_88"
                        android:textSize="24sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_gray_bg">

                        <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:text="请选择（选填）"
                            android:textColor="@color/white_88"
                            android:textSize="20sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="19dp"
                            android:src="@drawable/ic_down" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="     手术时间："
                        android:textColor="@color/white_88"
                        android:textSize="24sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_gray_bg">

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:text="请选择（必填）"
                            android:textColor="@color/white_88"
                            android:textSize="20sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="19dp"
                            android:src="@drawable/ic_down" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="     手术名称："
                        android:textColor="@color/white_88"
                        android:textSize="24sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_gray_bg">
                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/sp_select_diagnostic_result"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:entries="@array/diagnostic_result_list"
                            android:gravity="center"
                            android:spinnerMode="dropdown"
                            android:theme="@style/Spinner2"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="19dp"
                            android:src="@drawable/ic_down" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_step_2_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/btn_frame_gray_bg_8dp"
                android:paddingLeft="27dp"
                android:paddingTop="5dp"
                android:paddingRight="27dp"
                android:paddingBottom="5dp"
                android:text="@string/previous"
                android:textColor="@color/white_88"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_step_2_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/btn_orange_bg"
                android:paddingLeft="50dp"
                android:paddingTop="2dp"
                android:paddingRight="50dp"
                android:paddingBottom="2dp"
                android:text="@string/confirm_short"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_step_3"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="医院地址："
                android:textColor="@color/white_88"
                android:textSize="24sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:background="@drawable/round_gray_bg">

                <TextView
                    android:id="@+id/tv_hospital_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:text="请选择（选填）"
                    android:textColor="@color/white_88"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="19dp"
                    android:src="@drawable/ic_down" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="医院名称："
                android:textColor="@color/white_88"
                android:textSize="24sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:background="@drawable/round_gray_bg">

                <TextView
                    android:id="@+id/tv_hospital_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:text="请选择（选填）"
                    android:textColor="@color/white_88"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="19dp"
                    android:src="@drawable/ic_down" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="医        生："
                android:textColor="@color/white_88"
                android:textSize="24sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:background="@drawable/round_gray_bg">

                <TextView
                    android:id="@+id/tv_doctor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:text="请选择（选填）"
                    android:textColor="@color/white_88"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="19dp"
                    android:src="@drawable/ic_down" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="病  历  号："
                android:textColor="@color/white_88"
                android:textSize="24sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:background="@drawable/round_gray_bg">

                <EditText
                    android:id="@+id/et_CaseHistoryNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:maxLines="1"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:hint="@string/hint_edit_case_number"
                    android:inputType="text"
                    android:background="@color/transparent"
                    android:textColorHint="@color/white_88"
                    android:textColor="@color/white_88"
                    android:textSize="20sp" />

            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_step_3_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/btn_frame_gray_bg_8dp"
                android:paddingLeft="27dp"
                android:paddingTop="5dp"
                android:paddingRight="27dp"
                android:paddingBottom="5dp"
                android:text="@string/previous"
                android:textColor="@color/white_88"
