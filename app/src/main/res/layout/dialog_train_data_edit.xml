<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_border_bg">
    <LinearLayout
        android:layout_width="480dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="25dip">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="400dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:layout_marginBottom="20dip"
            android:textColor="@color/colorPrimary"
            android:textSize="28sp"
            android:text="第1阶段"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/gray_black"
                android:text="开始时间"/>
            <TextView
                android:id="@+id/txtStartDate"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/style_txt_user"
                android:layout_marginStart="20dp"
                android:paddingTop="@dimen/user_edit_text_hint_padding"
                android:hint="开始时间"
                android:textColor="@color/color_userMange_BtnLevel"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="20dp"
                android:paddingTop="@dimen/user_edit_text_hint_padding"
                android:textColor="@color/color_userMange_BtnLevel"
                android:text="至"
                android:visibility="gone"
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/txtEndDate"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/style_txt_user"
                android:layout_marginStart="20dp"
                android:paddingTop="@dimen/user_edit_text_hint_padding"
                android:hint="结束时间"
                android:textColor="@color/color_userMange_BtnLevel"
                android:textSize="25sp"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/gray_black"
                android:text="次数/（每天）"/>
            <EditText
                android:id="@+id/tv_time_of_day"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/style_txt_user"
                android:ems="10"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:paddingTop="@dimen/user_edit_text_hint_padding"
                android:inputType="number"
                android:textColor="@color/color_userMange_BtnLevel"
                android:textSize="25sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/gray_black"
                android:text="时间/（每次）"/>
            <EditText
                android:id="@+id/tv_train_time"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/style_txt_user"
                android:ems="10"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:paddingTop="@dimen/user_edit_text_hint_padding"
                android:inputType="number"
                android:textColor="@color/color_userMange_BtnLevel"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/gray_black"
                android:layout_marginStart="10dp"
                android:text="分钟"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/gray_black"
                android:text="起始负重（kg）"/>
            <EditText
                android:id="@+id/tv_train_load"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/style_txt_user"
                android:ems="10"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:paddingTop="@dimen/user_edit_text_hint_padding"
                android:inputType="number"
                android:textColor="@color/color_userMange_BtnLevel"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/gray_black"
                android:layout_marginStart="10dp"
                android:text="kg"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="680dp"
        android:layout_height="4dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dip"
        android:background="#e5e5e5" />
    <LinearLayout
        android:layout_width="680dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="250dip"
            android:layout_height="80dip"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <View
            android:layout_width="1dip"
            android:layout_height="25dip"
            android:layout_gravity="center"
            android:background="#e5e5e5" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="250dip"
            android:layout_height="80dip"
            android:gravity="center"
            android:text="@string/btn_save"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />
    </LinearLayout>
</LinearLayout>