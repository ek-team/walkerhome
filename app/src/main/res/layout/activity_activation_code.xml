<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/ic_bg">

    <include
        android:id="@+id/layout_center_title"
        layout="@layout/layout_center_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:visibility="gone"/>

    <include
        android:id="@+id/layout_bottom"
        layout="@layout/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:id="@+id/layout_system_setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_bottom"
        android:layout_below="@id/layout_center_title"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_device_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white_65"
            android:textSize="20sp"
            tools:text="123123"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et1"
                style="@style/activation_code_char_edit_style"/>

            <TextView
                style="@style/activation_code_text_style"
                android:text="-" />

            <EditText
                android:id="@+id/et2"
                style="@style/activation_code_char_edit_style" />

            <TextView
                style="@style/activation_code_text_style"
                android:text="-" />

            <EditText
                android:id="@+id/et3"
                style="@style/activation_code_char_edit_style" />

            <TextView
                style="@style/activation_code_text_style"
                android:text="-" />

            <EditText
                android:id="@+id/et4"
                style="@style/activation_code_char_edit_style" />

            <TextView
                style="@style/activation_code_text_style"
                android:text="-" />

            <EditText
                android:id="@+id/et5"
                style="@style/activation_code_char_edit_style" />

            <TextView
                style="@style/activation_code_text_style"
                android:text="-" />

            <EditText
                android:id="@+id/et6"
                style="@style/activation_code_char_edit_style" />

            <TextView
                style="@style/activation_code_text_style"
                android:text="-" />

            <EditText
                android:id="@+id/et7"
                style="@style/activation_code_char_edit_style" />

            <TextView
                style="@style/activation_code_text_style"
                android:text="-" />

            <EditText
                android:id="@+id/et8"
                style="@style/activation_code_char_edit_style" />

        </LinearLayout>

        <EditText
            android:id="@+id/et_code"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:hint="请输入激活码"
            android:inputType="text"
            android:layout_marginTop="50dp"
            android:maxLines="1"
            android:maxLength="1000"
            android:textColor="@color/white_88"
            android:textColorHint="@color/white_88"
            android:text="11c9e9695e64fe1e2126a6cbba8ada7c6b94df3e3f5b16b9f2a5dc0c86c1a798"
            android:textSize="20sp"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:background="#E6EAEE" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:gravity="center">
            <TextView
                android:id="@+id/btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_orange_bg"
                android:paddingLeft="50dp"
                android:paddingTop="15dp"
                android:paddingRight="50dp"
                android:paddingBottom="15dp"
                android:text="@string/activate_confirm"
                android:textColor="@color/white"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/btn_net_activation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_orange_bg"
                android:padding="10dp"
                android:layout_marginStart="20dp"
                android:text="联网激活"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>